@model USTrails.UI.Models.DTO.TrailDto

<h2 class="mt-3">Edit Trail</h2>

@if (Model is not null)
{
    <form method="post">
        <div class="visually-hidden">
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label class="form-label">Length</label>
            <input type="number" step="0.1" class="form-control" asp-for="LengthInMi" />
        </div>
        <div class="mt-3 d-flex justify-content-around">
            <button type="submit" class="btn btn-primary" asp-controller="Trails" asp-action="Update">Save</button>
            <button type="submit" class="btn btn-danger" asp-controller="Trails" asp-action="Delete">Delete</button>
        </div>
    </form>
}